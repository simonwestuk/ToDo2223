@model IEnumerable<TaskModel>

@{
    ViewData["Title"] = "Tasks Page";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="text-center">
    <h1 class="display-4">Task Page</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Description</th>
            <th scope="col">Date</th>
            <th scope="col">Completed</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>@item.DueDate.ToShortDateString()</td>
                <td>
                    <form asp-controller="Task" asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" onchange="submit();" >
                        <input class="form-check-input" type="checkbox" asp-for="@item.Completed" id="switch" />
                    </form>

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <form method="post" action="@Url.Action("Delete", "Task")" id="delete-task-form" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="button" class="btn btn-danger" onclick="confirmDeleteTask();">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>

<script>


      function confirmDeleteTask() {
          Swal.fire({
              title: 'Confirm Delete',
              text: 'Are you sure you want to delete this task?',
              icon: 'question',
              showCancelButton: true,
              confirmButtonColor: '#d33',
              cancelButtonColor: '#3085d6',
              confirmButtonText: 'Yes, delete it!'
          }).then((result) => {
              if (result.isConfirmed) {
                  document.getElementById('delete-task-form').submit();
              }
          });
      }

</script>